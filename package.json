{
  "name": "@samwise-tech/core",
  "version": "1.2.0",
  "description": "Core utilities for Samwise projects",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib && tsc --project tsconfig.publish.json",
    "karma": "karma start config/karma.conf.js",
    "lint": "tslint --project tsconfig.tslint.json --format verbose './src/**/*.ts'",
    "mocha": "mocha --opts ./mocha.opts './src/**/*.spec.ts'",
    "mocha:tdd": "yarn mocha --watch --reporter min",
    "prepublish": "yarn build && cp -r ./lib/* ./",
    "test": "yarn outdated && yarn lint && yarn test-specs-for-only && yarn mocha && yarn karma && yarn build",
    "test-specs-for-only": "forbidden 'src/**/*.spec.ts' -p describe.only it.only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samwise-tech/core.git"
  },
  "keywords": [
    "core",
    "typescript",
    "ts",
    "monet",
    "utilities"
  ],
  "author": "Technology Concepts & Design, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samwise-tech/core/issues"
  },
  "homepage": "https://github.com/samwise-tech/core#readme",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@samwise-tech/di": "^1.2.0",
    "@types/lodash": "^4.14.80",
    "@types/uuid": "^3.4.3",
    "immutable": "^3.8.2",
    "lodash": "^4.17.4",
    "rxjs": "^5.5.7",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@samwise-tech/forbidden-patterns": "1.0.2",
    "@samwise-tech/tslint-config": "1.0.3",
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.48",
    "@types/node": "9.4.7",
    "chai": "4.1.2",
    "circular-dependency-plugin": "4.4.0",
    "karma": "2.0.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-webpack": "2.0.13",
    "mocha": "5.0.4",
    "monet": "0.9.0-alpha.4",
    "puppeteer": "1.2.0",
    "redux": "^3.7.0",
    "reflect-metadata": "^0.1.12",
    "ts-loader": "4.0.1",
    "ts-node": "5.0.1",
    "tslib": "1.9.0",
    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "webpack": "4.1.1"
  },
  "peerDependencies": {
    "monet": "0.9.0-alpha.4",
    "reflect-metadata": "^0.1.12"
  },
  "optionalPeerDependencies": {
    "redux": "^3.7.0"
  }
}
