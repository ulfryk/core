{
  "name": "@samwise-tech/core",
  "version": "1.0.3",
  "description": "Core utilities for Samwise projects",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib && node_modules/.bin/tsc --project tsconfig.publish.json",
    "karma": "node_modules/.bin/karma start config/karma.conf.js",
    "lint": "node_modules/.bin/tslint --project tsconfig.tslint.json --format verbose './src/**/*.ts'",
    "mocha": "node_modules/.bin/mocha --opts ./mocha.opts './src/**/*.spec.ts'",
    "prepublish": "yarn build && cp -r ./lib/* ./",
    "test": "yarn outdated && yarn test-specs-for-only && yarn mocha && yarn karma && yarn lint",
    "test-specs-for-only": "node_modules/.bin/forbidden 'src/**/*.spec.ts' -p describe.only it.only"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samwise-tech/core.git"
  },
  "keywords": [
    "core",
    "typescript",
    "ts",
    "monet",
    "utilities"
  ],
  "author": "Samwise Technology, Inc. <icunningham@samwise.tech>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samwise-tech/core/issues"
  },
  "homepage": "https://github.com/samwise-tech/core#readme",
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "@types/lodash": "^4.14.80",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@samwise-tech/forbidden-patterns": "1.0.1",
    "@samwise-tech/tslint-config": "1.0.2",
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.47",
    "@types/node": "9.3.0",
    "chai": "4.1.2",
    "circular-dependency-plugin": "4.4.0",
    "core-js": "2.5.3",
    "karma": "2.0.0",
    "karma-chai": "0.1.0",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-webpack": "2.0.9",
    "mocha": "5.0.0",
    "monet": "0.9.0-alpha.4",
    "redux": "^3.7.0",
    "ts-loader": "3.3.1",
    "ts-node": "4.1.0",
    "tslib": "1.9.0",
    "tslint": "5.9.1",
    "typescript": "2.6.2",
    "webpack": "3.10.0"
  },
  "peerDependencies": {
    "monet": "0.9.0-alpha.4"
  },
  "optionalPeerDependencies": {
    "redux": "^3.7.0"
  }
}
